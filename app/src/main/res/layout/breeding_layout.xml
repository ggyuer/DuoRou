<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:background="@drawable/breeding_top_shape"
        android:gravity="center">

        <com.wzq.duorou.theme.ColorTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="?attr/colorPrimary"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="多肉植物唐扇的介绍和养殖方法，唐扇多肉植物怎么养殖?"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/breeding_center_shape"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/imgLayout"
            android:orientation="horizontal"
            android:background="@drawable/timg"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        </LinearLayout>
        <ImageView
            android:id="@+id/img"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/breeding_center_shape"
            android:src="@drawable/timg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/breeding_bottom_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2017-3-1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like_sel" />
    </LinearLayout>

</LinearLayout>