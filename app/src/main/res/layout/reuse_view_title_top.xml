<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tb_toolbar"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    app:titleTextColor="@android:color/white">

    <com.wzq.duorou.theme.ColorRelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:textSize="23sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/disturb"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_name"
            android:src="@drawable/chat_disturb"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:onClick="execute"
            android:clickable="true"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnRight"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/ease_chat_send_btn_selector"
            android:enabled="false"
            android:gravity="center"
            android:onClick="execute"
            android:text="完成"
            android:textColor="@drawable/ease_chat_sent_text_color"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/save"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:onClick="save"
            android:clickable="true"
            android:visibility="gone" />

    </RelativeLayout>
    </com.wzq.duorou.theme.ColorRelativeLayout>
</RelativeLayout>
